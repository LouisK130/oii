<resolvers>
  <resolver name="mvco_bin">
    <!-- pid = pid of sample bin; format = adc,roi, or hdr -->
    <match variable="pid">.*((IFCB\d+_\d{4}_\d{3})_\d{6})</match>
    <variable name="filename">${1}.${format}</variable>
    <variable name="day">${2}</variable>
    <variable name="root">
      <value>/data/vol3/adcmod</value> <!-- look here first, it shadows unmodified adc data -->
      <value>/data/vol3</value>
      <value>/data/vol1</value>
      <value>/data/vol2</value>
    </variable>
    <path match="${root}/${day}/${filename}"/>
  </resolver>
  <resolver name="mvco_blob">
    <match variable="pid">.*(IFCB\d+_((\d{4})_\d{3})_\d{6})</match>
    <variable name="filename">${1}_blobs_v2.zip</variable>
    <variable name="year">${2}</variable>
    <variable name="day">${3}</variable>
    <variable name="root">
      <value>/data/vol4/blobs</value>
    </variable>
    <path match="${root}/${year}/${day}/${filename}"/>
  </resolver>
</resolvers>