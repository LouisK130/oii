<resolvers>
  <resolver name="pid">
    <match var="pid" groups="namespace lid bin instrument year day time - target - extension"
	   pattern="(.*)(((IFCB\d+)_(\d{4})_(\d{3})_(\d{6}))(_(\d{5}))?)(\.([a-z][a-z0-9]*))?">
      <var name="version">v1</var>
      <hit/>
    </match>
  </resolver>
  <resolver name="binpid2path">
    <!-- pid = pid of sample bin; format = adc,roi, or hdr -->
    <import name="pid"/>
    <var name="filename">${lid}.${format}</var>
    <var name="root">
      <value>/data/vol3/adcmod</value> <!-- look here first, it shadows unmodified adc data -->
      <value>/data/vol3</value>
      <value>/data/vol1</value>
      <value>/data/vol2</value>
    </var>
    <path match="${root}/${instrument}_${year}_${day}/${filename}"/>
  </resolver>
  <resolver name="mvco_blob">
    <import name="pid"/>
    <var name="filename">${lid}_blobs_v2.zip</var>
    <var name="root">
      <value>/data/vol4/blobs</value>
    </var>
    <path match="${root}/${year}/${year}_${day}/${filename}"/>
  </resolver>
</resolvers>